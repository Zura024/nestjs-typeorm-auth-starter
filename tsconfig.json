{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@app/*": [
        "./*"
      ],
      "@env/*": [
        "../environment/*"
      ]
    }
  },
  "exclude": ["node_modules"]
}
